
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <a href="/snacks">Go To All Snacks</a>
      <form method="POST" action="/snacks">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" class="form-control" id="name" placeholder="title" value="{{snack.name}}">
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input type="text" name="img-url" class="form-control" id="image" placeholder="image">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" name="description" class="form-control" id="description" placeholder="Snack Description">
        </div>
        <div class="form-group">
          <label for="rating">Snack Rating</label>
          <input type="number" name="rating" min="0" max="5" id="rating">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>
